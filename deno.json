{
  "nodeModulesDir": "manual",
  "permissions": {
    "default": {
      "net": true,
      "read": true,
      "run": true,
      "all": true
    }
  },
  "compilerOptions": {
    "lib": ["esnext", "dom", "deno.ns"],
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "types": ["vite/client"]
  },
  "tasks": {
    "start": "deno run -P src/main.ts",
    "dev": {
      "dependencies": [
        "dev:backend",
        "dev:vite"
      ]
    },
    "dev:vite": "vite",
    "dev:backend": "deno run -P src/main.ts",
    "build:vite": "vite build",
    "preview": "vite preview"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "preact": "npm:preact@^10.28.1",
    "@preact/preset-vite": "npm:@preact/preset-vite@^2",
    "vite": "npm:vite@^7.3.0",
    "~/": "./"
  }
}
