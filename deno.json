{
  "permissions": {
    "default": {
      "net": true,
      "read": true,
      "run": true,
      "all": true
    }
  },
  "compilerOptions": {
    "lib": ["esnext", "dom", "deno.ns"],
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "tasks": {
    "start": "deno run -P src/main.ts",
    "dev": "deno run -A --unstable-bundle scripts/dev.ts",
    "build": "deno run -A --unstable-bundle scripts/bundle.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "preact": "https://esm.sh/preact@10.19.3",
    "preact/hooks": "https://esm.sh/preact@10.19.3/hooks",
    "preact/jsx-runtime": "https://esm.sh/preact@10.19.3/jsx-runtime",
    "~/": "./"
  }
}
