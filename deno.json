{
  "permissions": {
    "default": {
      "net": true,
      "read": true,
      "run": true,
      "all": true
    }
  },
  "compilerOptions": {
    "lib": ["esnext", "dom", "deno.ns"]
  },
  "tasks": {
    "start": "deno run -P src/main.ts",
    "dev": "deno run -A --unstable-bundle scripts/dev.ts",
    "build": "deno run -A --unstable-bundle scripts/bundle.ts"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "~/": "./"
  }
}
